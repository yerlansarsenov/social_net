<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.main_frag.EditFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <EditText
            android:hint="first name"
            android:textColor="@color/textColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name_edit_frag"
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="30dp"
            android:textSize="27dp"
            android:inputType="textEmailAddress"
            android:background="@color/editColor"
            />


        <EditText
            android:hint="last name"
            android:textColor="@color/textColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/last_edit_frag"
            android:layout_marginVertical="30dp"
            android:textSize="27dp"
            android:layout_marginHorizontal="30dp"
            android:inputType="textEmailAddress"
            android:background="@color/editColor"
            />


        <EditText
            android:hint="login"
            android:textColor="@color/textColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/login_edit_frag"
            android:layout_marginVertical="30dp"
            android:textSize="27dp"
            android:layout_marginHorizontal="30dp"
            android:inputType="textEmailAddress"
            android:background="@color/editColor"
            />


        <EditText
            android:hint="old password"
            android:textColor="@color/textColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/old_pass_edit_frag"
            android:textSize="27dp"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="40dp"
            android:inputType="textPassword"
            android:background="@color/editColor"
            />

        <EditText
            android:hint="new password"
            android:textColor="@color/textColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/new_pass_edit_frag"
            android:textSize="27dp"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="40dp"
            android:inputType="textPassword"
            android:background="@color/editColor"
            />

        <TextView
            android:textColor="@color/textColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chosen_edit_frag"
            android:textSize="24dp"
            android:layout_marginHorizontal="50dp"
            android:visibility="invisible"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/choose_edit_frag"
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="90dp"
            android:text="choose image"
            android:textColor="@color/background"
            android:background="@color/textColor"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/doit_edit_frag"
            android:layout_marginHorizontal="70dp"
            android:layout_marginBottom="30dp"
            android:text="save edit"
            android:textColor="@color/background"
            android:background="@color/textColor"
            />

    </LinearLayout>

</ScrollView>