<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.main_frag.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:id="@+id/ava_prof_frag"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="30dp"
                android:layout_toRightOf="@id/ava_prof_frag"
                android:id="@+id/lin_text_prof_frag"
                >
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/name_prof_frag"
                android:textColor="@color/textColor"
                android:textSize="30dp"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/last_prof_frag"
                    android:textColor="@color/textColor"
                    android:textSize="30dp"
                    />

            </LinearLayout>

        </RelativeLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addtofr_prof_frag"
            android:background="@color/textColor"
            android:textColor="@color/background"
            android:text="+add to friends"
            android:textSize="20dp"
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="50dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chat_prof_frag"
            android:background="@color/textColor"
            android:textColor="@color/background"
            android:text="chat"
            android:textSize="20dp"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="50dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/friends_prof_frag"
            android:background="@color/textColor"
            android:textColor="@color/background"
            android:text="friends"
            android:textSize="20dp"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="50dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/posts_prof_frag"
            android:background="@color/textColor"
            android:textColor="@color/background"
            android:text="posts"
            android:textSize="20dp"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="50dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_prof_frag"
            android:background="@color/textColor"
            android:textColor="@color/background"
            android:text="edit profile"
            android:textSize="20dp"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="50dp"
            />
    </LinearLayout>


</ScrollView>