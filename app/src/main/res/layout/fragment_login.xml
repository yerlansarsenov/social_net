<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context=".fragments.login_frag.LoginFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
        android:id="@+id/title_login_frag"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10sp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="0sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/podtitle_login_frag"
        android:text="Local Net"
        android:textSize="60dp"
        android:gravity="center"
        android:textColor="@color/textColor"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/podtitle_login_frag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edit1_login_frag"
        app:layout_constraintTop_toBottomOf="@id/title_login_frag"
        android:text="Log in"
        android:layout_marginBottom="5sp"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/edit1_login_frag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/textColor"
        app:layout_constraintTop_toBottomOf="@id/podtitle_login_frag"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edit2_login_frag"
        android:ems="10"
        android:hint="login"
        android:layout_marginLeft="40sp"
        android:layout_marginBottom="10sp"
        android:layout_marginRight="40sp"
        android:background="@color/editColor"
        android:padding="5sp"
        android:textColor="@color/colorPrimaryDark"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/edit2_login_frag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:background="@color/editColor"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColorHint="@color/textColor"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit1_login_frag"
        android:ems="10"
        android:layout_marginBottom="30sp"
        app:layout_constraintBottom_toTopOf="@id/button1_login_frag"
        android:hint="password"
        android:inputType="textPassword"
        android:padding="5sp"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/button1_login_frag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="60sp"
        android:layout_marginLeft="60sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/background"
        android:background="@color/textColor"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button2_login_frag"
        android:layout_marginBottom="15sp"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/edit2_login_frag"
        android:text="Log in" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="80sp"
        android:layout_marginLeft="80sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button1_login_frag"
        android:id="@+id/button2_login_frag"
        android:textColor="@color/background"
        android:textSize="15dp"
        android:background="@color/textColor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="sign up"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>