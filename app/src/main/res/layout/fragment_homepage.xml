<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.main_frag.HomepageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rel1_home_frag"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toTopOf="@id/rel2_home_frag"
            >
            <TextView
                android:id="@+id/test_home_frag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Profile"
                android:textSize="40dp"
                android:textColor="@color/textColor"
                android:drawablePadding="30dp"
                android:drawableLeft="@drawable/ic_profile"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rel2_home_frag"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/rel1_home_frag"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/rel3_home_frag"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Friends"
                android:textSize="40dp"
                android:textColor="@color/textColor"
                android:drawablePadding="30dp"
                android:drawableLeft="@drawable/ic_group_black_24dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rel3_home_frag"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/rel2_home_frag"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/rel4_home_frag"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Chats"
                android:textSize="40dp"
                android:textColor="@color/textColor"
                android:drawablePadding="30dp"
                android:drawableLeft="@drawable/ic_chats"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rel4_home_frag"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/rel3_home_frag"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ext_home_frag"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="My Posts"
                android:textSize="40dp"
                android:textColor="@color/textColor"
                android:drawablePadding="30dp"
                android:drawableLeft="@drawable/ic_posts"
                />
        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ext_home_frag"
            app:layout_constraintTop_toBottomOf="@id/rel4_home_frag"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="log out"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="90dp"
            android:textColor="@color/background"
            android:background="@color/textColor"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>